// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model User {
  id           String        @id @default(cuid())
  kindeId      String        @unique  // Kinde user ID
  email        String        @unique
  username     String        @unique
  name         String?
  applications Application[]
  createdAt    DateTime      @default(now())

  @@map("users")
}


model TaskType {
  id          String @id @default(cuid())
  type        String @unique // 'essay-draft', 'essay-final', 'timebox', 'notification'
  defaultTime Int? // in hours: timebox=2, draft=2, final=1, notification=null
  tasks       Task[]

  @@map("task_types")
}

model Application {
  id         String   @id @default(cuid())
  userId     String
  schoolName String
  deadline   DateTime
  url        String?
  status     String   @default("not_started") // not_started, in_progress, completed
  tasks      Task[]
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("applications")
}

model Task {
  id            String      @id @default(cuid())
  applicationId String
  taskTypeId    String
  title         String
  description   String?
  status        String      @default("pending") // pending, completed, overdue
  dueDate       DateTime?
  timeEstimate  Float? // in hours
  completedAt   DateTime?
  order         Int? // for ordering within an application
  globalOrder   Int? // for flexible ordering across applications
  url           String? // task-specific URL, defaults to application URL
  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  taskType      TaskType    @relation(fields: [taskTypeId], references: [id])

  @@map("tasks")
}